---
interface Props {
  translations: Array<{ locale: string; slug: string }>;
  currentLocale: string;
}
const { translations, currentLocale } = Astro.props;
const localeNames: Record<string, string> = {
  en: 'English', es: 'Español', fr: 'Français', de: 'Deutsch', pt: 'Português', ja: '日本語', zh: '中文',
};
---
{translations.length > 0 && (
  <div class="translation-bar">
    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-ink-muted shrink-0"><circle cx="12" cy="12" r="10"/><line x1="2" y1="12" x2="22" y2="12"/><path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"/></svg>
    {translations.map(t => (
      <a
        href={`/articles/${t.slug}`}
        class:list={['font-ui text-sm no-underline px-2 py-0.5 rounded transition-colors', t.locale === currentLocale ? 'bg-accent/15 text-accent font-medium' : 'text-ink-muted hover:text-accent']}
      >
        {localeNames[t.locale] || t.locale}
      </a>
    ))}
  </div>
)}
