---
interface Props {
  title: string;
  authors: string;
  year: number;
  journal: string;
  finding: string;
  pdfUrl?: string;
}
const { title, authors, year, journal, finding, pdfUrl } = Astro.props;
---
<div class="study-card blog-reveal">
  <div class="flex items-start gap-3 mb-3">
    <div class="w-10 h-10 rounded-full flex items-center justify-center shrink-0 mt-0.5" style="background:rgba(58,107,78,0.12)">
      <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="text-forest"><path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z"/><path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z"/></svg>
    </div>
    <div>
      <h4 class="font-display font-bold text-xl text-forest-dark m-0 leading-tight">{title}</h4>
      <p class="font-ui text-sm text-ink-muted m-0 mt-1">{authors} ({year}) Â· <em>{journal}</em></p>
    </div>
  </div>
  <p class="font-hand text-ink-light text-base leading-relaxed m-0 mb-3">
    <strong class="text-forest-dark">Key finding:</strong> {finding}
  </p>
  {pdfUrl && (
    <a href={pdfUrl} target="_blank" rel="noopener" class="inline-flex items-center gap-1.5 font-ui text-sm text-forest hover:opacity-75 transition-opacity no-underline">
      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/><polyline points="7 10 12 15 17 10"/><line x1="12" y1="15" x2="12" y2="3"/></svg>
      Download PDF
    </a>
  )}
</div>
