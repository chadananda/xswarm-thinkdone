---
export const prerender = true;
import BaseLayout from './BaseLayout.astro';
import '../styles/blog.css';
import { imgUrl } from '../lib/imgix';
import SiteNav from '../components/SiteNav.astro';
interface SalesData {
  tagline: string;
  accentColor: string;
  heroQuote: string;
  problem: {
    headline: string;
    description: string;
    painPoints: { icon: string; text: string }[];
  };
  philosophy: {
    headline: string;
    description: string;
    principles: { title: string; description: string }[];
  };
  insights: { title: string; description: string; icon: string }[];
  thinkdonePitch: {
    headline: string;
    description: string;
    points: string[];
  };
  faq: { q: string; a: string }[];
}
interface Props {
  name: string;
  role: string;
  bio: string;
  longBio: string;
  avatar: string;
  expertise: string[];
  social?: { twitter?: string; linkedin?: string; website?: string };
  sales?: SalesData;
}
const { name, role, bio, longBio, avatar, expertise, social = {}, sales } = Astro.props;
const avatarSrc = imgUrl(avatar, { w: 400, h: 400, fit: 'crop' });
const firstName = name.split(' ')[0];
const accent = sales?.accentColor || '#8b4513';
---
<BaseLayout title={`${name} — Productivity Expert | ThinkDone`} description={sales?.tagline || bio} ogImage={avatarSrc}>
  <div class="author-sales-page" style={`--author-accent: ${accent};`}>

    <!-- ═══ FIXED NAV ═══ -->
    <SiteNav links={[
      { href: '/authors', label: 'Team' },
      { href: '/articles', label: 'Articles' },
      { href: '/#pricing', label: 'Pricing' },
    ]} />

    {sales ? (
      <!-- ═══ DARK HERO ═══ -->
      <section class="au-hero">
        <div class="au-blob au-blob-accent" style="width:500px;height:500px;top:5%;left:-12%"></div>
        <div class="au-blob au-blob-gold" style="width:350px;height:350px;bottom:15%;right:-8%;animation-delay:-12s"></div>
        <div class="au-hero-glow"></div>
        <div class="au-hero-grid"></div>
        <div class="relative z-10 max-w-4xl mx-auto px-6 text-center">
          <div class="au-avatar-ring">
            <img src={avatarSrc} width="400" height="400" alt={name} class="au-avatar" />
          </div>
          <p class="font-mono text-xs tracking-widest uppercase mb-4" style={`color: ${accent}`}>{role}</p>
          <h1 class="font-display font-bold text-paper leading-tight mb-4" style="font-size:clamp(2.6rem,6.5vw,4.5rem)">
            {name}
          </h1>
          <div class="flex flex-wrap gap-2 justify-center mb-6">
            {expertise.map(tag => (
              <span class="au-tag">{tag}</span>
            ))}
          </div>
          <blockquote class="au-hero-quote">
            <span class="au-quote-mark">&ldquo;</span>
            {sales.heroQuote}
            <span class="au-quote-mark">&rdquo;</span>
          </blockquote>
          {(social.twitter || social.linkedin) && (
            <div class="flex gap-4 justify-center mt-8">
              {social.twitter && (
                <a href={`https://twitter.com/${social.twitter}`} class="au-social-link" target="_blank" rel="noopener">
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
                </a>
              )}
              {social.linkedin && (
                <a href={`https://linkedin.com/in/${social.linkedin}`} class="au-social-link" target="_blank" rel="noopener">
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
                </a>
              )}
            </div>
          )}
        </div>
        <svg class="absolute bottom-0 left-0 w-full" viewBox="0 0 1440 120" preserveAspectRatio="none" style="height:100px">
          <path d="M0,64 C240,96 480,96 720,64 C960,32 1200,32 1440,64 L1440,120 L0,120 Z" fill="var(--color-warm)"/>
        </svg>
      </section>

      <!-- ═══ THE PROBLEM ═══ -->
      <section class="au-section bg-warm">
        <div class="max-w-4xl mx-auto px-6">
          <div class="text-center mb-12 au-reveal">
            <h2 class="font-display font-bold text-4xl md:text-5xl text-forest-dark mb-4">
              {sales.problem.headline}
            </h2>
            <p class="font-hand text-xl text-ink-muted max-w-2xl mx-auto leading-relaxed">
              {sales.problem.description}
            </p>
          </div>
          <div class="grid sm:grid-cols-2 gap-4">
            {sales.problem.painPoints.map((point, i) => (
              <div class="au-pain-card au-reveal" style={`animation-delay: ${i * 0.1}s`}>
                <span class="au-pain-icon">{point.icon}</span>
                <p class="font-hand text-ink-light leading-relaxed">{point.text}</p>
              </div>
            ))}
          </div>
        </div>
      </section>

      <!-- ═══ PHILOSOPHY ═══ -->
      <section class="au-section bg-paper au-graph-bg">
        <div class="max-w-4xl mx-auto px-6">
          <div class="text-center mb-12 au-reveal">
            <h2 class="font-display font-bold text-4xl md:text-5xl text-forest-dark mb-4">
              {sales.philosophy.headline}
            </h2>
            <p class="font-hand text-lg text-ink-muted max-w-2xl mx-auto leading-relaxed">
              {sales.philosophy.description}
            </p>
          </div>
          <div class="au-principles">
            <div class="au-principles-line"></div>
            {sales.philosophy.principles.map((p, i) => (
              <div class="au-principle au-reveal" style={`animation-delay: ${i * 0.15}s`}>
                <div class="au-principle-num">{i + 1}</div>
                <div class="pl-20">
                  <h3 class="font-display font-bold text-2xl md:text-3xl text-forest-dark mb-2">{p.title}</h3>
                  <p class="font-hand text-ink-light text-lg leading-relaxed">{p.description}</p>
                </div>
              </div>
            ))}
          </div>
        </div>
      </section>

      <!-- ═══ BIO INTERLUDE ═══ -->
      <section class="au-section bg-warm">
        <div class="max-w-3xl mx-auto px-6 au-reveal">
          <div class="au-bio-card">
            <div class="au-bio-avatar-wrap">
              <img src={imgUrl(avatar, { w: 160, h: 160, fit: 'crop' })} width="160" height="160" alt={name} class="au-bio-avatar" />
            </div>
            <div class="blog-prose">
              {longBio.split('\n\n').map(para => (
                <p>{para.trim()}</p>
              ))}
            </div>
          </div>
        </div>
      </section>

      <!-- ═══ INSIGHTS ═══ -->
      <section class="au-section bg-paper au-graph-bg">
        <div class="max-w-6xl mx-auto px-6">
          <div class="text-center mb-12 au-reveal">
            <h2 class="font-display font-bold text-4xl md:text-5xl text-forest-dark mb-4">
              Insights from {firstName}
            </h2>
            <p class="font-hand text-xl text-ink-muted">
              A taste of what you'll find in {firstName}'s articles.
            </p>
          </div>
          <div class="grid md:grid-cols-2 gap-6">
            {sales.insights.map((insight, i) => (
              <div class="au-insight-card au-reveal" style={`animation-delay: ${i * 0.1}s`}>
                <span class="au-insight-icon">{insight.icon}</span>
                <h3 class="font-display font-bold text-xl text-forest-dark mb-2">{insight.title}</h3>
                <p class="font-hand text-ink-light leading-relaxed">{insight.description}</p>
              </div>
            ))}
          </div>
        </div>
      </section>

      <!-- ═══ THINKDONE PITCH (DARK) ═══ -->
      <section class="au-pitch">
        <div class="au-blob au-blob-accent" style="width:400px;height:400px;top:-10%;right:-8%"></div>
        <div class="au-blob au-blob-gold" style="width:300px;height:300px;bottom:-10%;left:-5%;animation-delay:-7s"></div>
        <svg class="absolute top-0 left-0 w-full" viewBox="0 0 1440 120" preserveAspectRatio="none" style="height:100px;transform:scaleY(-1)">
          <path d="M0,64 C240,96 480,96 720,64 C960,32 1200,32 1440,64 L1440,120 L0,120 Z" fill="var(--color-paper)"/>
        </svg>
        <div class="relative z-10 max-w-4xl mx-auto px-6 pt-12">
          <div class="text-center mb-10 au-reveal">
            <div class="flex items-center justify-center gap-3 mb-6">
              <img src="/favicon.png" alt="" width="48" height="48" class="rounded-lg" style="filter: drop-shadow(0 4px 12px rgba(0,0,0,0.4))">
            </div>
            <h2 class="font-display font-bold text-paper mb-4" style="font-size:clamp(2rem,5vw,3.5rem);line-height:1.15">
              {sales.thinkdonePitch.headline}
            </h2>
            <p class="font-hand text-paper/65 text-lg max-w-2xl mx-auto leading-relaxed mb-8">
              {sales.thinkdonePitch.description}
            </p>
          </div>
          <div class="grid sm:grid-cols-2 gap-4 max-w-3xl mx-auto mb-10">
            {sales.thinkdonePitch.points.map((point, i) => (
              <div class="au-pitch-point au-reveal" style={`animation-delay: ${i * 0.1}s`}>
                <svg class="w-5 h-5 shrink-0 mt-0.5" style={`color: ${accent}`} fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span class="font-hand text-paper/80 leading-relaxed">{point}</span>
              </div>
            ))}
          </div>
          <div class="text-center au-reveal">
            <a href="/#pricing" class="au-btn-gradient">Try ThinkDone for a Buck</a>
            <p class="font-ui text-paper/30 text-xs mt-4">$1 to start &middot; Cancel anytime</p>
          </div>
        </div>
        <svg class="absolute bottom-0 left-0 w-full" viewBox="0 0 1440 120" preserveAspectRatio="none" style="height:100px">
          <path d="M0,64 C240,96 480,96 720,64 C960,32 1200,32 1440,64 L1440,120 L0,120 Z" fill="var(--color-warm)"/>
        </svg>
      </section>

      <!-- ═══ PRICING ═══ -->
      <section class="au-section bg-warm">
        <div class="max-w-6xl mx-auto px-6">
          <div class="text-center mb-12 au-reveal">
            <h2 class="font-display font-bold text-4xl md:text-5xl text-forest-dark mb-4">
              Simple pricing. Serious clarity.
            </h2>
            <p class="font-hand text-xl text-ink-muted">
              Start small or go all in. Every plan includes your AI planning dashboard.
            </p>
          </div>
          <div class="au-price-grid">
            <div class="au-price-card au-reveal">
              <h3 class="font-display font-bold text-2xl text-forest-dark mb-2">Starter</h3>
              <div class="mb-2">
                <span class="font-display font-bold text-4xl text-forest-dark">$5</span>
                <span class="font-ui text-ink-muted text-sm">/month</span>
              </div>
              <p class="font-hand text-ink-muted text-sm mb-4">Pay-as-you-go AI. Try it out.</p>
              <ul class="au-price-features">
                <li><svg class="w-4 h-4 text-success shrink-0" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/></svg><span>Interactive dashboard</span></li>
                <li><svg class="w-4 h-4 text-success shrink-0" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/></svg><span>AI meetings (pay per use)</span></li>
                <li><svg class="w-4 h-4 text-success shrink-0" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/></svg><span>Up to 3 projects</span></li>
              </ul>
              <a href="#" class="au-btn-outline">Get Started</a>
            </div>
            <div class="au-price-card au-reveal">
              <h3 class="font-display font-bold text-2xl text-forest-dark mb-2">Standard</h3>
              <div class="mb-2">
                <span class="font-display font-bold text-4xl text-forest-dark">$27</span>
                <span class="font-ui text-ink-muted text-sm">/month</span>
              </div>
              <p class="font-hand text-ink-muted text-sm mb-4">10 hours of AI planning.</p>
              <ul class="au-price-features">
                <li><svg class="w-4 h-4 text-success shrink-0" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/></svg><span><strong>10 hours</strong> AI planning</span></li>
                <li><svg class="w-4 h-4 text-success shrink-0" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/></svg><span>Persistent memory</span></li>
                <li><svg class="w-4 h-4 text-success shrink-0" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/></svg><span>Unlimited projects</span></li>
                <li><svg class="w-4 h-4 text-success shrink-0" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/></svg><span>GTD methodology</span></li>
              </ul>
              <a href="#" class="au-btn-outline">Try It for a Buck</a>
            </div>
            <div class="au-price-card au-price-pro au-reveal">
              <div class="au-price-badge">Most Popular</div>
              <h3 class="font-display font-bold text-2xl text-forest-dark mb-2">Pro</h3>
              <div class="mb-2">
                <span class="font-display font-bold text-4xl text-forest-dark">$45</span>
                <span class="font-ui text-ink-muted text-sm">/month</span>
              </div>
              <p class="font-hand text-ink-muted text-sm mb-4">40 hours. Delegate to AI.</p>
              <ul class="au-price-features">
                <li><svg class="w-4 h-4 text-success shrink-0" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/></svg><span><strong>40 hours</strong> AI planning</span></li>
                <li><svg class="w-4 h-4 text-success shrink-0" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/></svg><span>OpenClaw integration</span></li>
                <li><svg class="w-4 h-4 text-success shrink-0" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/></svg><span>Automation connectors</span></li>
                <li><svg class="w-4 h-4 text-success shrink-0" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/></svg><span>Priority support</span></li>
              </ul>
              <a href="#" class="au-btn-gradient au-btn-block">Try It for a Buck</a>
            </div>
          </div>
          <p class="text-center font-ui text-sm text-ink-muted mt-6 au-reveal">No contracts. Cancel anytime.</p>
        </div>
      </section>

      <!-- ═══ FAQ ═══ -->
      <section class="au-section bg-paper au-graph-bg">
        <div class="max-w-3xl mx-auto px-6">
          <div class="text-center mb-12 au-reveal">
            <h2 class="font-display font-bold text-4xl md:text-5xl text-forest-dark mb-4">
              Ask {firstName} anything.
            </h2>
          </div>
          <div class="space-y-3">
            {sales.faq.map((item, i) => (
              <details class="au-faq-item au-reveal" style={`animation-delay: ${i * 0.08}s`}>
                <summary>{item.q}</summary>
                <p>{item.a}</p>
              </details>
            ))}
          </div>
        </div>
      </section>

      <!-- ═══ FINAL CTA ═══ -->
      <section class="au-final-cta">
        <div class="au-blob au-blob-accent" style="width:500px;height:500px;top:-15%;right:-10%"></div>
        <div class="au-blob au-blob-gold" style="width:400px;height:400px;bottom:-15%;left:-8%;animation-delay:-9s"></div>
        <svg class="absolute top-0 left-0 w-full" viewBox="0 0 1440 120" preserveAspectRatio="none" style="height:100px;transform:scaleY(-1)">
          <path d="M0,64 C240,96 480,96 720,64 C960,32 1200,32 1440,64 L1440,120 L0,120 Z" fill="var(--color-paper)"/>
        </svg>
        <div class="relative z-10 max-w-4xl mx-auto px-6 text-center pt-8 au-reveal">
          <img src={imgUrl(avatar, { w: 120, h: 120, fit: 'crop' })} width="120" height="120" alt={name} class="au-final-avatar" />
          <p class="font-display italic text-paper/80 text-2xl md:text-3xl max-w-2xl mx-auto mb-8 leading-snug">
            &ldquo;{sales.tagline}&rdquo;
          </p>
          <p class="font-hand text-paper/50 mb-8">&mdash; {name}, {role}</p>
          <a href="/#pricing" class="au-btn-gradient au-btn-lg">Start Your First Morning Meeting</a>
          <p class="font-ui text-paper/30 text-xs mt-4">$1 to start &middot; AI usage billed separately &middot; Cancel anytime</p>
        </div>
      </section>

    ) : (
      <!-- ═══ FALLBACK: SIMPLE BIO (no sales data) ═══ -->
      <div class="blog-graph-bg min-h-screen pt-20" style="border-left: 3px solid var(--color-margin);">
        <div class="max-w-3xl mx-auto px-6 py-12">
          <div class="flex flex-col sm:flex-row items-center sm:items-start gap-6 mb-8">
            <img src={avatarSrc} width="120" height="120" alt={name} class="author-avatar-lg" />
            <div class="text-center sm:text-left">
              <h1 class="font-display font-bold text-forest-dark text-4xl mb-1">{name}</h1>
              <p class="font-ui text-ink-muted text-sm mb-3">{role}</p>
              <p class="font-hand text-ink-light text-lg leading-relaxed">{bio}</p>
            </div>
          </div>
          <div class="flex flex-wrap gap-2 mb-8">
            {expertise.map(tag => (
              <span class="tag-pill">{tag}</span>
            ))}
          </div>
          <div class="blog-prose">
            <p>{longBio}</p>
          </div>
        </div>
      </div>
    )}

    <!-- ═══ ARTICLES SLOT ═══ -->
    <slot />

    <!-- ═══ FOOTER ═══ -->
    <footer class="au-footer">
      <div class="au-footer-inner">
        <div class="flex items-center gap-3">
          <img src="/favicon.png" alt="" width="32" height="32" class="rounded-lg">
          <span class="font-display font-bold text-xl text-paper">Think<span style="opacity:0.35">-</span><span class="text-gold">Done</span><span class="text-paper/40">.ai</span></span>
        </div>
        <div class="flex items-center gap-6 font-ui text-sm text-paper/50">
          <a href="/articles" class="hover:text-paper transition-colors">Articles</a>
          <a href="/authors" class="hover:text-paper transition-colors">Authors</a>
          <a href="/#pricing" class="hover:text-paper transition-colors">Pricing</a>
        </div>
        <div class="font-ui text-sm text-paper/40">
          from <a href="https://xswarm.ai" class="text-gold hover:text-paper transition-colors" target="_blank" rel="noopener">xSwarm.ai</a>
        </div>
      </div>
    </footer>

  </div>

  <script>
    // Scroll reveal
    const obs = new IntersectionObserver((entries) => {
      entries.forEach(e => { if (e.isIntersecting) { e.target.classList.add('visible'); obs.unobserve(e.target); } });
    }, { threshold: 0.1, rootMargin: '0px 0px -40px 0px' });
    document.querySelectorAll('.au-reveal').forEach(el => obs.observe(el));
    // Smooth scroll
    document.querySelectorAll('a[href^="#"]').forEach(a => {
      a.addEventListener('click', e => {
        const t = document.querySelector(a.getAttribute('href')!);
        if (t) { e.preventDefault(); t.scrollIntoView({ behavior: 'smooth', block: 'start' }); }
      });
    });
