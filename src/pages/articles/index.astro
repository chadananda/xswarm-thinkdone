      .sr-track{display:flex;gap:1rem;overflow-x:auto;scroll-snap-type:x mandatory;-webkit-overflow-scrolling:touch;padding:0.25rem 0 0.5rem;scrollbar-width:none}
      .sr-track::-webkit-scrollbar{display:none}
      .sr-card{flex:0 0 190px;scroll-snap-align:start;display:flex;flex-direction:column;border-radius:0.6rem;overflow:hidden;background:rgba(255,255,255,0.08);backdrop-filter:blur(6px);border:1px solid rgba(255,255,255,0.1);text-decoration:none;color:#fff;transition:transform 0.2s,background 0.2s}
      .sr-card:hover{transform:translateY(-3px);background:rgba(255,255,255,0.15)}
      .sr-img-wrap{position:relative;aspect-ratio:16/10;overflow:hidden;background:rgba(255,255,255,0.05)}
      .sr-img-wrap img{width:100%;height:100%;object-fit:cover;display:block}
      .sr-badge{position:absolute;top:0.35rem;left:0.35rem;font-family:var(--font-ui);font-size:0.5rem;font-weight:700;text-transform:uppercase;letter-spacing:0.06em;padding:0.12rem 0.45rem;border-radius:50px;background:rgba(15,31,24,0.75);backdrop-filter:blur(4px);color:#fff}
      .sr-body{padding:0.45rem 0.55rem 0.5rem;display:flex;flex-direction:column;gap:0.2rem}
      .sr-title{font-family:var(--font-display);font-size:0.95rem;line-height:1.15;display:-webkit-box;-webkit-line-clamp:2;-webkit-box-orient:vertical;overflow:hidden}
      .sr-meta{font-family:var(--font-ui);font-size:0.65rem;opacity:0.6;display:flex;align-items:center;gap:0.3rem}
      .sr-meta img{width:16px;height:16px;border-radius:50%;object-fit:cover;border:1px solid rgba(255,255,255,0.2)}
      .sr-empty{text-align:center;padding:1.5rem;font-family:var(--font-hand);font-size:1rem;color:rgba(255,255,255,0.5)}
      @media(max-width:768px){.sr-card{flex:0 0 155px}.sr-title{font-size:0.85rem}}
    `;
    results.appendChild(sheet);
    let debounce;
    input.addEventListener('input', () => {
      clearTimeout(debounce);
      debounce = setTimeout(() => {
        const q = input.value.trim().toLowerCase();
        // Keep the style element, clear everything else
        const styleEl = results.querySelector('style');
        results.innerHTML = '';
        if (styleEl) results.appendChild(styleEl);
        if (!q) { results.style.display = 'none'; return; }
        const matches = articles.filter(a =>
          a.t.toLowerCase().includes(q) ||
          a.d.toLowerCase().includes(q) ||
          a.a.toLowerCase().includes(q) ||
          a.y.toLowerCase().includes(q) ||
          (a.g || []).some(tag => tag.toLowerCase().includes(q))
        );
        results.style.display = 'block';
        if (matches.length === 0) {
          results.insertAdjacentHTML('beforeend', '<div class="sr-empty">No articles matched your search</div>');
        } else {
          results.insertAdjacentHTML('beforeend', `<div class="sr-track">${matches.map(a => `
            <a href="/articles/${a.s}" class="sr-card">
              <div class="sr-img-wrap">
                ${a.h ? `<img src="${a.h}" alt="" loading="lazy" />` : ''}
                <span class="sr-badge">${a.y}</span>
              </div>
              <div class="sr-body">
                <span class="sr-title">${a.t}</span>
                <span class="sr-meta">
                  ${a.av ? `<img src="${a.av}" alt="" />` : ''}
                  ${a.a} · ${a.r}
                </span>
              </div>
            </a>
          `).join('')}</div>`);
        }
      }, 150);
    });
  }
</script>
