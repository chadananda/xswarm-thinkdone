---
import BaseLayout from '../../layouts/BaseLayout.astro';
import SiteNav from '../../components/SiteNav.astro';
import BlogFooter from '../../components/blog/BlogFooter.astro';
import '../../styles/blog.css';
import { getCollection, getEntry } from 'astro:content';
import { imgUrl } from '../../lib/imgix.js';
//
const allArticles = await getCollection('articles', ({ data }) => !data.draft);
const sorted = allArticles.sort((a, b) => new Date(b.data.publishedAt).getTime() - new Date(a.data.publishedAt).getTime());
//
async function resolveAuthor(authorId: string) {
  const author = await getEntry('authors', authorId);
  return author ? { name: author.data.name, avatar: author.data.avatar } : { name: authorId, avatar: '' };
}
const articles = await Promise.all(sorted.map(async (a) => ({
  title: a.data.title,
  description: a.data.description,
  type: a.data.type,
  heroImage: a.data.heroImage,
  author: await resolveAuthor(a.data.author),
  publishedAt: a.data.publishedAt.toISOString(),
  readingTime: a.data.readingTime,
  slug: a.id,
  tags: a.data.tags || [],
})));
//
// Categorize articles
const deepDives = articles.filter(a => a.type === 'deep-dive');
const comparisons = articles.filter(a => a.type === 'comparison');
const guides = articles.filter(a => a.type === 'methodology-guide' || a.type === 'roundup');
const listicles = articles.filter(a => a.type === 'listicle');
const insights = articles.filter(a => a.type === 'problem-solution' || a.type === 'thought-leadership' || a.type === 'how-to');
// Featured: first 3 articles (regardless of type)
const featured = articles.slice(0, 3);
// Stats
const reviewCount = deepDives.length;
const totalMinutes = articles.reduce((sum, a) => {
  const m = parseInt(a.readingTime) || 12;
  return sum + m;
}, 0);
//
// Helper: get hero image URL through imgix
function heroSrc(path?: string, w = 1200, h = 600) {
  return path ? imgUrl(path, { w, h, fit: 'crop' }) : '';
}
function avatarSrc(path?: string) {
  return path ? imgUrl(path, { w: 64, h: 64, fit: 'crop', facepad: 2 }) : '';
}
// Helper: short label for article type
function typeLabel(type: string): string {
  const labels: Record<string, string> = {
    'deep-dive': 'review',
    'comparison': 'comparison',
    'methodology-guide': 'guide',
    'roundup': 'roundup',
    'listicle': 'listicle',
    'problem-solution': 'insight',
    'thought-leadership': 'opinion',
    'how-to': 'how-to',
  };
  return labels[type] || type.replace(/-/g, ' ');
}
// Helper: extract app names from comparison titles like "ThinkDone vs Todoist: subtitle"
function parseVsNames(title: string): [string, string] {
  const match = title.match(/(.+?)\s+vs\.?\s+(.+)/i);
  if (!match) return [title, ''];
  // Strip subtitles after colon (e.g. "Things 3: The Definitive Comparison" → "Things 3")
  const nameA = match[1].trim().split(':')[0].trim();
  const nameB = match[2].trim().split(':')[0].trim();
  return [nameA, nameB];
}
---
<BaseLayout title="Articles — ThinkDone" description="Honest reviews, deep dives, and practical guides to help you stop planning and start doing.">
  <SiteNav links={[
    { href: '/articles', label: 'Articles' },
    { href: '/authors', label: 'Authors' },
    { href: '/#pricing', label: 'Pricing' },
  ]} />

  {/* JSON-LD structured data for article collection */}
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "CollectionPage",
    "name": "Articles — ThinkDone",
    "description": "Honest reviews, deep dives, and practical strategies for building a productivity system that actually works.",
    "url": "https://think-done.com/articles",
    "mainEntity": {
      "@type": "ItemList",
      "numberOfItems": articles.length,
      "itemListElement": articles.slice(0, 10).map((a, i) => ({
        "@type": "ListItem",
        "position": i + 1,
        "url": `https://think-done.com/articles/${a.slug}`,
        "name": a.title,
      })),
    },
  })} />

  <!-- ═══ HERO ═══ -->
  <section class="ac-hero">
    <h1>What if the problem isn't you?</h1>
    <p class="ac-hero-sub">Most productivity advice focuses on the app. We focus on the system. These are the reviews, strategies, and deep dives that changed how we think about getting things done.</p>
    {featured[0] && (
      <a href={`/articles/${featured[0].slug}`} class="ac-hero-article" aria-label={`Read: ${featured[0].title}`}>
        {featured[0].heroImage && (
          <img src={heroSrc(featured[0].heroImage, 1400, 700)} alt="" class="ac-hero-article-bg" loading="eager" />
        )}
        <div class="ac-hero-article-overlay">
          <span class="ac-type-pill">{typeLabel(featured[0].type)}</span>
          <h2>{featured[0].title}</h2>
          <p>{featured[0].description}</p>
          <div class="ac-hero-article-meta">
            {featured[0].author.avatar ? (
              <img src={avatarSrc(featured[0].author.avatar)} alt={`Photo of ${featured[0].author.name}`} class="ac-avatar" />
            ) : (
              <span class="ac-avatar-placeholder">{featured[0].author.name.charAt(0)}</span>
            )}
            <span>{featured[0].author.name} · {featured[0].readingTime}</span>
            <span class="ac-hero-link">Read the evidence →</span>
          </div>
        </div>
      </a>
    )}
    <!-- Search -->
    <div class="ac-search-wrap">
      <svg class="ac-search-icon" viewBox="0 0 20 20" fill="none" stroke="currentColor" stroke-width="2"><circle cx="8.5" cy="8.5" r="6"/><line x1="13" y1="13" x2="18" y2="18"/></svg>
      <input type="text" class="ac-search-input" placeholder="Search articles..." autocomplete="off" />
    </div>
    <div class="ac-search-results" aria-live="polite" style="display:none;width:100%;max-width:900px;margin:1.5rem auto 0;position:relative;overflow:hidden;z-index:4;"></div>
    <!-- Angled bottom edge -->
    <svg class="ac-divider-hero" aria-hidden="true" viewBox="0 0 1440 80" preserveAspectRatio="none"><path d="M0,0 L1440,60 L1440,80 L0,80 Z" fill="var(--color-paper)"/></svg>
  </section>
  <script type="application/json" id="ac-article-data" set:html={JSON.stringify(articles.map(a => ({
    t: a.title,
    d: a.description,
    y: typeLabel(a.type),
    a: a.author.name,
    av: a.author.avatar ? imgUrl(a.author.avatar, { w: 48, h: 48, fit: 'crop', facepad: 2 }) : '',
    r: a.readingTime,
    s: a.slug,
    g: a.tags,
    h: a.heroImage ? imgUrl(a.heroImage, { w: 320, h: 180, fit: 'crop' }) : '',
  })))} />

  <!-- ═══ REVIEWS SECTION ═══ -->
  {deepDives.length > 0 && (
    <section class="ac-section ac-landscape blog-graph-bg">
      <h2 class="ac-headline">We reviewed every major app so you don't have to</h2>
      <div class="ac-river">
        <div class="ac-stat-row">
          <div class="ac-stat"><span class="ac-stat-num">{reviewCount}</span><span class="ac-stat-label">apps reviewed</span></div>
          <div class="ac-stat"><span class="ac-stat-num">{totalMinutes}+</span><span class="ac-stat-label">min of reading</span></div>
          <div class="ac-stat"><span class="ac-stat-num">1</span><span class="ac-stat-label">clear winner</span></div>
        </div>

        {/* Primary review — large hero card */}
        {deepDives[0] && (
          <a href={`/articles/${deepDives[0].slug}`} class="ac-river-hero" aria-label={`Read: ${deepDives[0].title}`}>
            {deepDives[0].heroImage && <img src={heroSrc(deepDives[0].heroImage)} alt="" class="ac-river-hero-bg" loading="lazy" />}
            <div class="ac-river-hero-overlay">
              <span class="ac-type-pill">deep dive</span>
              <p class="ac-pull-quote">"{deepDives[0].description}"</p>
              <h3>{deepDives[0].title}</h3>
              <div class="ac-meta-row">
                {deepDives[0].author.avatar ? (
                  <img src={avatarSrc(deepDives[0].author.avatar)} alt={deepDives[0].author.name} class="ac-avatar-sm" />
                ) : (
                  <span class="ac-avatar-placeholder-sm">{deepDives[0].author.name.charAt(0)}</span>
                )}
                <span>{deepDives[0].author.name} · {deepDives[0].readingTime}</span>
                <span class="ac-read-link">Read full review →</span>
              </div>
            </div>
          </a>
        )}

        {/* Two asymmetric cards */}
        {deepDives.length > 2 && (
          <div class="ac-river-pair">
            {deepDives.slice(1, 3).map((article, i) => (
              <a href={`/articles/${article.slug}`} class:list={['ac-river-card', i === 0 ? 'ac-river-card-tall' : 'ac-river-card-short']} aria-label={`Read: ${article.title}`}>
                {article.heroImage && <img src={heroSrc(article.heroImage, 800, 500)} alt="" class="ac-river-card-bg" loading="lazy" />}
                <div class="ac-river-card-inner">
                  <span class="ac-type-pill">deep dive</span>
                  <h3>{article.title}</h3>
                  <p>{article.description}</p>
                  <div class="ac-meta-row">
                    {article.author.avatar ? (
                      <img src={avatarSrc(article.author.avatar)} alt={article.author.name} class="ac-avatar-sm" />
                    ) : (
                      <span class="ac-avatar-placeholder-sm">{article.author.name.charAt(0)}</span>
                    )}
                    <span>{article.author.name} · {article.readingTime}</span>
                  </div>
                </div>
              </a>
            ))}
          </div>
        )}

        {/* Cascade — remaining deep dives */}
        {deepDives.length > 3 && (
          <div class="ac-cascade">
            {deepDives.slice(3).map(article => (
              <a href={`/articles/${article.slug}`} class="ac-cascade-card" aria-label={`Read: ${article.title}`}>
                {article.heroImage && <img src={heroSrc(article.heroImage, 600, 375)} alt="" class="ac-cascade-card-bg" loading="lazy" />}
                <div class="ac-cascade-card-inner">
                  <span class="ac-type-pill">deep dive</span>
                  <h3>{article.title}</h3>
                  <div class="ac-meta-row">
                    {article.author.avatar ? (
                      <img src={avatarSrc(article.author.avatar)} alt={article.author.name} class="ac-avatar-sm" />
                    ) : (
                      <span class="ac-avatar-placeholder-sm">{article.author.name.charAt(0)}</span>
                    )}
                    <span>{article.author.name} · {article.readingTime}</span>
                  </div>
                </div>
              </a>
            ))}
          </div>
        )}
      </div>

      <!-- Angled transition to interlude -->
      <svg class="ac-divider-down" aria-hidden="true" viewBox="0 0 1440 60" preserveAspectRatio="none"><path d="M0,0 L1440,40 L1440,60 L0,60 Z" fill="var(--color-gold)"/></svg>
    </section>
  )}

  <!-- ═══ INTERLUDE ═══ -->
  {articles.length > 0 && (
    <div class="ac-interlude">
      <p>While you were reading reviews, <span class="ac-counter">2,847</span> people switched to ThinkDone.</p>
      <a href="/#pricing" class="ac-interlude-btn">Try Free →</a>
      <svg class="ac-divider-down" aria-hidden="true" viewBox="0 0 1440 60" preserveAspectRatio="none"><path d="M0,0 L1440,40 L1440,60 L0,60 Z" fill="var(--color-forest-dark)"/></svg>
    </div>
  )}

  <!-- ═══ COMPARISONS ═══ -->
  {comparisons.length > 0 && (
    <section class="ac-section ac-versus">
      <h2 class="ac-headline" style="color:white">The matchups that matter</h2>

      {comparisons[0] && (() => {
        const [nameA, nameB] = parseVsNames(comparisons[0].title);
        return (
          <a href={`/articles/${comparisons[0].slug}`} class="ac-vs-hero" aria-label={`Read: ${comparisons[0].title}`}>
            <div class="ac-vs-side ac-vs-side-a"><span>{nameA}</span></div>
            <div class="ac-vs-side ac-vs-side-b"><span>{nameB}</span></div>
            <div class="ac-vs-badge">VS</div>
            <div class="ac-vs-info">
              <p>{comparisons[0].description}</p>
              <span class="ac-read-link" style="color:var(--color-gold)">Read full comparison →</span>
            </div>
          </a>
        );
      })()}

      {comparisons.slice(1).map(article => {
        const [nameA, nameB] = parseVsNames(article.title);
        return (
          <a href={`/articles/${article.slug}`} class="ac-vs-mini" aria-label={`Read: ${article.title}`}>
            <span class="ac-vs-mini-name">{nameA}</span>
            <span class="ac-vs-mini-div">VS</span>
            <span class="ac-vs-mini-name">{nameB}</span>
            <span class="ac-vs-mini-meta">{article.author.name} · {article.readingTime}</span>
          </a>
        );
      })}

      <!-- Angled transition -->
      <svg class="ac-divider-down" aria-hidden="true" viewBox="0 0 1440 80" preserveAspectRatio="none"><path d="M0,20 L1440,0 L1440,80 L0,80 Z" fill="var(--color-sage)"/></svg>
    </section>
  )}

  <!-- ═══ METHODOLOGY / GUIDES ═══ -->
  {guides.length > 0 && (
    <section class="ac-section ac-method">
      <h2 class="ac-headline" style="color:white">It's not just about the app</h2>

      {guides.map(article => (
        <a href={`/articles/${article.slug}`} class="ac-book-card" aria-label={`Read: ${article.title}`}>
          {article.heroImage && <img src={heroSrc(article.heroImage, 1000, 500)} alt="" class="ac-book-card-bg" loading="lazy" />}
          <div class="ac-book-card-inner">
            <span class="ac-type-pill">{typeLabel(article.type)}</span>
            <h3>{article.title}</h3>
            <p>{article.description}</p>
            <div class="ac-meta-row">
              {article.author.avatar ? (
                <img src={avatarSrc(article.author.avatar)} alt={article.author.name} class="ac-avatar-sm" />
              ) : (
                <span class="ac-avatar-placeholder-sm">{article.author.name.charAt(0)}</span>
              )}
              <span>{article.author.name} · {article.readingTime}</span>
              <span class="ac-read-link">Read the guide →</span>
            </div>
          </div>
        </a>
      ))}

      <!-- Angled transition -->
      <svg class="ac-divider-down" aria-hidden="true" viewBox="0 0 1440 60" preserveAspectRatio="none"><path d="M0,40 L1440,0 L1440,60 L0,60 Z" fill="var(--color-paper)"/></svg>
    </section>
  )}

  <!-- ═══ LISTICLES ═══ -->
  {listicles.length > 0 && (
    <section class="ac-section ac-listicles">
      <h2 class="ac-headline">The roundups</h2>
      {listicles.map(article => (
        <a href={`/articles/${article.slug}`} class="ac-listicle-card" aria-label={`Read: ${article.title}`}>
          {article.heroImage && <img src={heroSrc(article.heroImage, 1000, 400)} alt="" class="ac-listicle-card-bg" loading="lazy" />}
          <div class="ac-listicle-card-inner">
            <span class="ac-type-pill">{typeLabel(article.type)}</span>
            <h3>{article.title}</h3>
            <p>{article.description}</p>
            <div class="ac-meta-row">
              {article.author.avatar ? (
                <img src={avatarSrc(article.author.avatar)} alt={article.author.name} class="ac-avatar-sm" />
              ) : (
                <span class="ac-avatar-placeholder-sm">{article.author.name.charAt(0)}</span>
              )}
              <span>{article.author.name} · {article.readingTime}</span>
              <span class="ac-read-link">Read the full list →</span>
            </div>
          </div>
        </a>
      ))}
      <svg class="ac-divider-down" aria-hidden="true" viewBox="0 0 1440 60" preserveAspectRatio="none"><path d="M0,0 L1440,40 L1440,60 L0,60 Z" fill="var(--color-paper-bright)"/></svg>
    </section>
  )}

  <!-- ═══ TESTIMONIAL ═══ -->
  <section class="ac-testimonial">
    <div class="ac-testimonial-mark">&ldquo;</div>
    <blockquote class="ac-testimonial-quote">I spent 6 months comparing apps. Then I found ThinkDone and stopped looking.</blockquote>
    <cite class="ac-testimonial-author">— Jordan Kim, Product Designer</cite>
    <a href="/#pricing" class="ac-testimonial-cta">Start your free trial →</a>
    <svg class="ac-divider-down" aria-hidden="true" viewBox="0 0 1440 60" preserveAspectRatio="none"><path d="M0,40 L1440,0 L1440,60 L0,60 Z" fill="var(--color-forest-dark)"/></svg>
  </section>

  <!-- ═══ INSIGHTS ═══ -->
  {insights.length > 0 && (
    <section class="ac-section ac-insights">
      <h2 class="ac-headline" style="color:white">What the research says</h2>
      {insights.map(article => (
        <a href={`/articles/${article.slug}`} class="ac-insight-card" aria-label={`Read: ${article.title}`}>
          <span class="ac-type-pill">{typeLabel(article.type)}</span>
          <h3>{article.title}</h3>
          <p>{article.description}</p>
          <div class="ac-meta-row">
            {article.author.avatar ? (
              <img src={avatarSrc(article.author.avatar)} alt={article.author.name} class="ac-avatar-sm" />
            ) : (
              <span class="ac-avatar-placeholder-sm">{article.author.name.charAt(0)}</span>
            )}
            <span>{article.author.name} · {article.readingTime}</span>
            <span class="ac-read-link">Read the full analysis →</span>
          </div>
        </a>
      ))}
    </section>
  )}

  <!-- ═══ FINAL CTA ═══ -->
  <section class="ac-final-cta">
    <svg class="ac-divider-top" aria-hidden="true" viewBox="0 0 1440 60" preserveAspectRatio="none"><path d="M0,60 L1440,60 L1440,0 L0,40 Z" fill="var(--color-forest-dark)"/></svg>
    <h2>Done is the engine of more.</h2>
    <p class="ac-final-tagline">ThinkDone — AI daily planning that actually works.</p>
    <div class="ac-final-buttons">
      <a href="/#pricing" class="ac-btn ac-btn-gold">Start Free</a>
      <a href="/#features" class="ac-btn ac-btn-outline">See How It Works</a>
    </div>
    <p class="ac-fine-print">No credit card required</p>
  </section>

  <!-- Back to top -->
  <button class="ac-back-to-top" aria-label="Back to top" onclick="window.scrollTo({top:0,behavior:'smooth'})">↑</button>

  <BlogFooter />
</BaseLayout>

<style>
/* ═══ ARTICLES COLLECTION ═══ */

/* ── OVERLAY TEXT SHADOW ── */
/* All white text over image overlays gets a subtle black edge for readability */
.ac-hero-article-overlay,
.ac-river-hero-overlay,
.ac-river-card-inner,
.ac-cascade-card-inner,
.ac-book-card-inner,
.ac-listicle-card-inner,
.ac-vs-info,
.ac-vs-side {
  text-shadow: 0 1px 4px rgba(0,0,0,0.5), 0 0 1px rgba(0,0,0,0.3);
}

/* ── OVERLAY FIT ── */
/* Prevent overlays from growing taller than their card */
.ac-hero-article-overlay,
.ac-river-hero-overlay,
.ac-river-card-inner,
.ac-cascade-card-inner,
.ac-book-card-inner,
.ac-listicle-card-inner,
.ac-vs-info {
  max-height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  box-sizing: border-box;
}
/* Title and description shrink first; pill and meta stay visible */
.ac-hero-article-overlay h2,
.ac-hero-article-overlay h3,
.ac-river-hero-overlay h3,
.ac-river-card-inner h3,
.ac-cascade-card-inner h3,
.ac-book-card-inner h3,
.ac-listicle-card-inner h3 {
  flex-shrink: 1;
  min-height: 0;
}
.ac-hero-article-overlay p,
.ac-river-hero-overlay p,
.ac-river-card-inner p,
.ac-book-card-inner p,
.ac-listicle-card-inner p,
.ac-vs-info p {
  flex-shrink: 2;
  min-height: 0;
}
.ac-type-pill,
.ac-meta-row,
.ac-hero-article-meta {
  flex-shrink: 0;
}

/* ── TYPE PILL ── */
.ac-type-pill {
  display: inline-block;
  font-family: var(--font-ui);
  font-size: 0.7rem;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.06em;
  padding: 0.25rem 0.75rem;
  border: none;
  border-radius: 50px;
  color: #fff;
  background: rgba(15,31,24,0.7);
  backdrop-filter: blur(4px);
  margin-bottom: 0.5rem;
  width: fit-content;
  text-shadow: none;
}

/* ── HERO ── */
.ac-hero {
  position: relative;
  min-height: 90vh;
  background: var(--color-forest-dark);
  color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  text-align: center;
  padding: 7rem 2rem 6rem;
  overflow: hidden;
}
.ac-hero h1 {
  font-family: var(--font-display);
  font-size: clamp(3rem, 8vw, 7rem);
  margin-bottom: 1.5rem;
  line-height: 1.1;
}
.ac-hero-sub {
  font-size: 1.3rem;
  max-width: 600px;
  margin-bottom: 3rem;
  opacity: 0.85;
}
/* Featured article in hero */
.ac-hero-article {
  position: relative;
  width: 100%;
  max-width: 1100px;
  border-radius: 16px;
  overflow: hidden;
  text-decoration: none;
  color: #fff;
  display: block;
  min-height: 320px;
  background: var(--color-forest);
  transition: transform 0.3s, box-shadow 0.3s;
}
.ac-hero-article:hover {
  transform: translateY(-4px);
  box-shadow: 0 16px 48px rgba(0,0,0,0.3);
}
.ac-hero-article-bg {
  position: absolute;
  inset: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  opacity: 0.8;
}
.ac-hero-article-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 2;
  padding: 1rem 3rem 2rem;
  background: linear-gradient(transparent 0%, rgba(15,31,24,0.3) 40%, rgba(15,31,24,0.88) 70%, rgba(15,31,24,0.95) 100%);
  text-align: left;
}
.ac-hero-article-overlay h2 {
  font-family: var(--font-display);
  font-size: clamp(2rem, 5vw, 3.5rem);
  margin-bottom: 0.5rem;
  line-height: 1.1;
}
.ac-hero-article-overlay p {
  font-size: 1.05rem;
  opacity: 0.9;
  max-width: 700px;
  margin-bottom: 0.75rem;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
.ac-hero-article-meta {
  display: flex;
  gap: 1rem;
  align-items: center;
  flex-wrap: wrap;
  font-size: 0.95rem;
  opacity: 0.9;
}
.ac-hero-link {
  color: var(--color-gold);
  font-weight: 600;
}
/* Dividers */
.ac-divider-hero,
.ac-divider-down,
.ac-divider-top {
  display: block;
  width: 100%;
