---
export const prerender = false;
import AdminLayout from '../layouts/AdminLayout.astro';
import SettingsPanel from '../components/SettingsPanel.svelte';
---
<AdminLayout title="Settings">
  <main class="settings-page">
    <nav class="settings-toc" aria-label="Settings navigation">
      <a href="#settings-ai" class="toc-link active"><svg class="toc-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M12 2a7 7 0 0 1 7 7c0 2.5-1.3 4.7-3.2 6H8.2C6.3 13.7 5 11.5 5 9a7 7 0 0 1 7-7z"/><path d="M9 15v2a3 3 0 0 0 6 0v-2"/><path d="M8 9h2l1 2 2-4 1 2h2"/></svg>AI</a>
      <a href="#settings-speech" class="toc-link"><svg class="toc-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><circle cx="9" cy="9" r="4"/><path d="M9 13c-4 0-7 2-7 4v1h14v-1c0-2-3-4-7-4z"/><path d="M16 7c.8.8 1.2 1.8 1.2 3s-.4 2.2-1.2 3"/><path d="M19 4c1.6 1.6 2.5 3.8 2.5 6s-.9 4.4-2.5 6"/></svg>Speech</a>
      <a href="#settings-connections" class="toc-link"><svg class="toc-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><circle cx="5" cy="12" r="2.5"/><circle cx="19" cy="6" r="2.5"/><circle cx="19" cy="18" r="2.5"/><path d="M7.5 11l9-4M7.5 13l9 4"/></svg>Connections</a>
      <a href="#settings-billing" class="toc-link"><svg class="toc-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="4" width="18" height="16" rx="2"/><path d="M3 8h18"/><path d="M7 12h4"/><path d="M7 15h2"/></svg>Billing</a>
      <a href="#settings-account" class="toc-link"><svg class="toc-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="8" r="4"/><path d="M4 20c0-3.3 3.6-6 8-6s8 2.7 8 6"/></svg>Account</a>
    </nav>
    <div class="settings-content">
      <SettingsPanel client:load />
    </div>
  </main>
</AdminLayout>

<script>
  // Wait for Svelte component to hydrate before observing section headings
  function initToc() {
    const links = document.querySelectorAll('.toc-link');
    const ids = Array.from(links).map(a => a.getAttribute('href').slice(1));
    const found = ids.every(id => document.getElementById(id));
    if (!found) { requestAnimationFrame(initToc); return; }

    const headerH = document.querySelector('.brand')?.offsetHeight || 64;
    const observer = new IntersectionObserver((entries) => {
      for (const entry of entries) {
        if (entry.isIntersecting) {
          links.forEach(a => a.classList.remove('active'));
          const match = document.querySelector(`.toc-link[href="#${entry.target.id}"]`);
          if (match) match.classList.add('active');
        }
      }
    }, { rootMargin: `-${headerH + 16}px 0px -75% 0px` });
    ids.forEach(id => observer.observe(document.getElementById(id)));
  }
  initToc();
</script>

<style is:global>
  .settings-page {
    max-width: 960px;
    margin: 0 auto;
    padding: 1rem 2rem 3rem;
    display: grid;
    grid-template-columns: 120px 1fr;
    gap: 1.5rem;
    align-items: start;
  }

  .settings-toc {
    position: sticky;
    top: 5rem;
    display: flex;
    flex-direction: column;
    gap: 2px;
    padding-top: 0.5rem;
  }

  .toc-link {
    font-family: var(--font-ui);
    font-size: 0.75rem;
    color: var(--color-ink-muted);
    text-decoration: none;
    padding: 8px 10px;
    border-left: 2px solid transparent;
    border-radius: 0 4px 4px 0;
    transition: color 0.15s, border-color 0.15s, background 0.15s, transform 0.15s;
    display: flex;
    align-items: center;
    gap: 6px;
  }

  .toc-icon {
    width: 14px;
    height: 14px;
    flex-shrink: 0;
    color: var(--color-accent);
    filter: drop-shadow(0.5px 0.5px 1px rgba(0,0,0,0.15));
  }

  .toc-link:hover {
    color: var(--color-ink);
    background: color-mix(in srgb, var(--color-gold) 6%, transparent);
    transform: translateX(2px);
  }

  .toc-link.active {
    color: var(--color-accent);
    font-weight: 600;
    border-left-color: var(--color-accent);
    background: color-mix(in srgb, var(--color-accent) 6%, transparent);
    box-shadow: inset 2px 0 0 var(--color-accent);
  }

  .toc-link:focus-visible {
    outline: 2px solid var(--color-accent);
    outline-offset: 2px;
  }

  .settings-content {
    min-width: 0;
  }

  /* Smooth scroll for TOC anchor links */
  html { scroll-behavior: smooth; }

  /* Offset anchor scroll to clear the sticky header */
  [id^="settings-"] {
    scroll-margin-top: 5rem;
  }

  @media (max-width: 768px) {
    .settings-page {
      grid-template-columns: 1fr;
      padding: 0.5rem 1rem 2rem;
    }
    .settings-toc {
      display: none;
    }
  }
</style>
